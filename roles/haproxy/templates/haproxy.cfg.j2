global
    log         127.0.0.1 local2 

    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        root
    group       root
    daemon

     # turn on stats unix socket
    stats socket /var/lib/haproxy/stats level admin

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option http-server-close
    option forwardfor       except 127.0.0.0/8
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

frontend http-in
    bind {{ hostvars[groups['lbservers'][0]]['ansible_' + private_net_iface].ipv4.address }}:80
    default_backend publics

backend publics  
    balance roundrobin
    option httpchk GET / HTTP/1.0\r\nUser-agent:\ LB-Check
    {% for host in groups['magnolia-publics'] %}
server {{ host }} {{ hostvars[host]['ansible_' + private_net_iface].ipv4.address }}:{{ hostvars[host].port }} check inter 2000 fall 3 rise 1
    {% endfor %}
